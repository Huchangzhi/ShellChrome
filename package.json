{
  "name": "shellchrome",
  "version": "1.0.0",
  "description": "基于 chrome-devtools-mcp 的 Node.js 中文控制台浏览器",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "bundle": "esbuild index.js --bundle --platform=node --target=node20 --outfile=dist/bundle.js --external:sharp --external:tesseract.js --external:chrome-devtools-mcp --external:@modelcontextprotocol/sdk",
    "build:pkg": "pkg dist/bundle.js --target node20 --output dist/shellchrome",
    "build:nexe": "nexe dist/bundle.js --target node20 --output dist/shellchrome"
  },
  "keywords": [
    "chrome",
    "devtools",
    "browser",
    "automation",
    "console"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "chrome-devtools-mcp": "^0.17.3",
    "sharp": "^0.33.0",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "esbuild": "latest",
    "nexe": "latest",
    "@yao-pkg/pkg": "latest"
  }
}
