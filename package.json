{
  "name": "shellchrome",
  "version": "1.0.0",
  "description": "基于 Puppeteer 的 Node.js 中文控制台浏览器",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "bundle": "esbuild index.js --bundle --platform=node --target=node20 --format=cjs --outfile=dist/bundle.cjs --external:puppeteer-core --external:child_process --external:fs --external:path --external:url",
    "build:nexe": "node scripts/copy-bundle.js && nexe bundle.cjs --target node20 --output dist/shellchrome && node scripts/cleanup.js"
  },
  "keywords": [
    "chrome",
    "devtools",
    "browser",
    "automation",
    "console",
    "puppeteer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "jimp": "^1.6.0",
    "puppeteer-core": "^24.0.0"
  },
  "devDependencies": {
    "esbuild": "latest",
    "nexe": "latest"
  }
}
